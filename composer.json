{
    "name": "basecardhero/sheets",
    "description": "A Google services wrapper library for creating Google Sheets.",
    "homepage": "https://github.com/basecardhero/sheets",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Base Card Hero",
            "email": "ryan@basecardhero.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "google/apiclient": "^2.2"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "mockery/mockery": "^1.2",
        "phpcompatibility/php-compatibility": "^9.1",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "BaseCardHero\\Sheets\\": "src"
        },
        "files": [
            "functions/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BaseCardHero\\Sheets\\Tests\\": "tests"
        }
    },
    "scripts": {
        "all": [
            "@lint",
            "@phpcs",
            "@test"
        ],
        "all-coverage": [
            "@lint",
            "@phpcs",
            "@test-coverage"
        ],
        "lint": [
            "parallel-lint ./src",
            "parallel-lint ./functions"
        ],
        "phpcbf": "phpcbf",
        "phpcs": "phpcs",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
